<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
        version="2.1">

    <persistence-unit name="MyPersistenceUnit" transaction-type="JTA">
        <jta-data-source>java:/realDataSource</jta-data-source>

        <class>com.realdolmen.course.domain.auth.User</class>
        <class>com.realdolmen.course.domain.Airline</class>
        <class>com.realdolmen.course.domain.Airport</class>
        <class>com.realdolmen.course.domain.Booking</class>
        <class>com.realdolmen.course.domain.Country</class>
        <class>com.realdolmen.course.domain.Flight</class>
        <class>com.realdolmen.course.domain.Trip</class>
        <class>com.realdolmen.course.domain.Residence</class>
        <class>com.realdolmen.course.domain.Period</class>
        <class>com.realdolmen.course.domain.auth.Partner</class>
        <class>com.realdolmen.course.domain.auth.Customer</class>
        <class>com.realdolmen.course.domain.auth.Employee</class>
        <class>com.realdolmen.course.domain.Plane</class>
        <class>com.realdolmen.course.domain.Period</class>

        <properties>
            <property name="hibernate.hbm2ddl.auto" value="validate" />
        </properties>
    </persistence-unit>

</persistence>